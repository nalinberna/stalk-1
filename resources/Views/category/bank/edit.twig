{% extends 'layout/master.twig' %}

{% block content %}

    <div class="card-header">
        <h4 class="m-b-0 text-info "><i class="fa fa-money" aria-hidden="true"></i>
            Edit  {{ bank.bank_name | capitalize }}
         </h4>
    </div>
 
    <div class="card-body">
        <form action="{{ path_for('bank.edit',{id:bank.id})}}"  method ="POST" class="form-horizontal">
            <div class="form-body">
                <h3 class="box-title m-t-15">{{ bank.bank_name | capitalize }} Information</h3>
                <hr class="m-t-0 m-b-40">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Bank Name <span class="text-danger">*</span>
                            </label>
                            <div class="col-md-9">
                                <input type="text"  name="bank_name" class="form-control {{ errors.bank_name ? 'is-invalid' :'' }} " 
                                     placehbanker="Bank name " value="{{ bank.bank_name}}">
                                 {% if errors.bank_name %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.bank_name | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                <!--/row-->

                  <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">Website
                            </label>
                            <div class="col-md-9">
                                <input type="url"  name="website" class="form-control {{ errors.website ? 'is-invalid' :'' }} " 
                                     placehbanker="Bank Website" value="{{ bank.website}}">
                                 {% if errors.website %}
                                      <div class="form-control-feedback invalid-feedback"> {{ errors.website | first }} </div> 
                                {% endif %}
                                </div>
                        </div>
                    </div>
                </div>
                <!--/row-->
           
        
           
                 <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label class="control-label text-right col-md-3">About/Contact the Institution </label>
                            <div class="col-md-9">
                                  <div class="form-group">
                                  <label class="text-primary"> About us, address, contact e.t.c</label>
                                        <textarea name="other_notes" class="textarea_editor form-control" rows="10" style="height:350px">
                                        {{ bank.other_notes }}
                                       
                                        </textarea>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/row-->

                <input type="hidden" name="_METHOD" value="PUT" />

            <div class="form-actions ">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="pull-right">
                             
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row">
                        <div class="col-md-2 offset-md-5">
                            <div class="pull-right">
                                <button type="submit" class="btn   btn-primary btn-block">
                                  Update
                                </button>
                            </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            {{ csrf.field | raw}}

        </form>
    </div>
</div>

{% endblock %}