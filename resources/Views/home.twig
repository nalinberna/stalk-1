{% extends 'layout/app.twig' %}

{% block body %}

 <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
      <h5 class="my-0 mr-md-auto font-weight-normal">IABD</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path_for('auth.login')}}">Home</a>
   
      {# <a class="btn btn-outline-primary" href="#">Student Login</a> #}
      </nav>
       <a class="btn btn-outline-primary" href="{{ path_for('auth.student')}}">Student Login</a>
    </div>


        <div class="unix-login">
            <div class="container-fluid">
            
                <div class="row justify-content-center">


              <div class="col-md-3">
                <img src="{{irish}}" height="250" width="350" alt="Logo" />

                    <h2 class="text-success font-weight-bold"> 
                    Irish Aid  Bursary Database (IABD)
                    </h2>
                </div>


              <div class="col-md-3">
                <img src="{{logo}}" height="250" width="350" alt="Logo" />
                </div>

                    <div class="col-md-5">
                        <div class="login-content card">

                      

                            <div class="login-form">

                              
                                <h2 class="text-primary float-center">
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                 &nbsp;&nbsp; &nbsp;&nbsp;
                                Login
                                </h2>

                                <small>
                                {% include 'layout/partials/flash.twig' %}
                                </small>

                                <form method="POST" action="{{ path_for('auth.login')}}">
                                    <div class="form-group">
                                        <label class="text-capitalize">Email address</label>
                                        <input type="email"  name="email" class="form-control" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label class="text-capitalize">Password</label>
                                        <input type="password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="checkbox">
                                        
                                        <label class="pull-right">
        										<a href="#">Forgotten Password?</a>
        								</label>

                                    </div>
                                    <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Sign in</button>
                                    <div class="register-link m-t-15 text-center">  
                                    </div>

                                    {{ csrf.field | raw }}
                                </form>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>

{% endblock %}